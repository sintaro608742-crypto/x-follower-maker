{
  "buildCommand": "npm run build:full",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/cron/post-tweets",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/record-followers",
      "schedule": "0 8 * * *"
    }
  ]
}
